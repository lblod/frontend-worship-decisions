<div {{did-update this.updateSelectedValue @value}}>
  <PowerSelectMultiple
          @search={{perform this.search}}
          @searchField={{"label"}}
          @searchPlaceholder="Typ om te zoeken..."
          @searchEnabled={{true}}
          @loadingMessage="Aan het laden..."
          @options={{this.options}}
          @selected={{this.selected}}
          @onChange={{this.changeSelected}}
          @allowClear={{true}} as |besluitType|>
    {{besluitType.label}}
  </PowerSelectMultiple>
  <AuHelpText class="au-u-margin-none">vb. Specifiek besluiten: Reglementen en verordeningen, belasting of retributie, ... of agenda, besluitenlijst of notulen</AuHelpText>
</div>
