<AuBodyContainer @scroll={{true}} itemprop="mainContentOfPage">
  <main id="content">
  <AuContentHeader @titlePartOne="Vlaanderen" @titlePartTwo="is lokaal bestuur">
    <img sizes="50vw" src="/assets/images/inzendingen-header-1600.jpg" srcset="/assets/images/inzendingen-header-320.jpg 320w, /assets/images/inzendingen-header-1024.jpg 1024w, /assets/images/inzendingen-header-1600.jpg 1600w" alt="" role="presentation">
  </AuContentHeader>

  <div class="au-o-region-large">
    <div class="au-o-layout">

      <AuHeading @skin="4">Kies een bestuurseenheid om mee in te loggen.</AuHeading>
      <p class="au-u-margin-top-small au-u-margin-bottom">
        {{#let (unique-id) as |id|}}
        <AuLabel for={{id}}>Bestuurseenheid zoeken</AuLabel>
        <input id={{id}} class="au-c-input au-c-input--block js-js-input-pattern-bound" placeholder="Aalst, Berchem, &hellip;" value={{this.gemeente}} oninput={{perform this.updateSearch value='target.value'}}>
        {{/let}}
      </p>

        <MockLogin as |login|>
          {{#if this.queryStore.isRunning}}
            <AuLoader @padding="small" />
          {{else}}
            {{#if this.login.errorMessage}}
              <AuAlert @alertIcon="alert-triangle" @alertTitle={{this.login.errorMessage}} @alertSkin="warning" />
            {{/if}}
            {{#each this.model as |account|}}
              <AuButton class="au-u-flex au-u-flex--row au-u-flex--start au-c-card au-u-margin-bottom-small" @skin="secondary" @width="block"  @size="large" type="button" {{on "click" (fn login.login account.id account.gebruiker.group.id)}}>
                {{account.gebruiker.voornaam}} {{account.gebruiker.achternaam}}
              </AuButton>
            {{/each}}
            <NumberPagination @page={{this.page}} @size={{this.size}} @nbOfItems={{this.model.length}} @total={{this.model.meta.count}} @links={{this.model.meta.pagination}} />
          {{/if}}
        </MockLogin>
      </div>
    </div>
  </main>
</AuBodyContainer>

